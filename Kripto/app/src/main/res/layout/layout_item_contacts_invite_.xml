<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/color_white"
        android:clickable="true"
        android:gravity="center">

        <RelativeLayout
            android:id="@+id/rel_users_lay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/margin_from_wall_8dp"
            android:layout_marginLeft="@dimen/margin_from_wall_8dp"
            android:layout_marginRight="@dimen/margin_from_wall_8dp"
            android:layout_toLeftOf="@+id/btn_follow"
            android:layout_toStartOf="@+id/btn_follow">


            <TextView
                android:id="@+id/txt_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_from_wall_16dp"
                android:layout_marginStart="@dimen/margin_from_wall_16dp"
                android:text="Bob swan"
                android:textColor="@color/partial_black"
                android:textSize="@dimen/text_size_17sp" />

            <TextView
                android:id="@+id/txt_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_from_wall_16dp"
                android:layout_marginStart="@dimen/margin_from_wall_16dp"
                android:text="Bob swan"
                android:textColor="@color/partial_black"
                android:textSize="@dimen/text_size_17sp"
                android:visibility="gone" />
        </RelativeLayout>

        <TextView
            android:id="@+id/btn_follow"
            android:layout_width="80dp"
            android:layout_height="32dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/margin_from_wall_16dp"
            android:layout_marginRight="@dimen/margin_from_wall_16dp"
            android:background="@drawable/rel_btn"
            android:elevation="@dimen/elevation_text_relationship"
            android:gravity="center"
            android:paddingLeft="@dimen/padding_5sp"
            android:paddingRight="@dimen/padding_5sp"
            android:text="  Invite  "
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp" />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginEnd="@dimen/margin_from_wall_8dp"
        android:layout_marginLeft="@dimen/margin_from_wall_8dp"
        android:background="@color/gray_little_dark" />
</LinearLayout>