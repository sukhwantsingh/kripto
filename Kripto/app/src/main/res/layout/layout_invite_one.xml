<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="43dp"
        android:gravity="center"
        android:text="Enter Invite code!"
        android:textColor="@color/color_black_less"
        android:textSize="@dimen/margin_from_wall_24dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2dp"
        android:clickable="true"
        android:onClick="dontHaveInvitaionCodeClick"
        android:padding="@dimen/text_size_15sp"
        android:text="Don't have invitation code?"
        android:textSize="@dimen/text_size_13sp" />

    <com.alimuzaffar.lib.pin.PinEntryEditText
        android:id="@+id/txt_pin_entry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/margin_from_wall_24dp"
        android:layout_marginRight="@dimen/margin_from_wall_24dp"
        android:layout_marginTop="100dp"
        android:cursorVisible="false"
        android:imeOptions="actionDone"
        android:inputType="textCapCharacters"
        android:maxLength="6"
        android:textAllCaps="true"
              android:textIsSelectable="false"
        android:textSize="19sp"
        app:pinBackgroundIsSquare="false"
        app:pinLineColors="@color/color_black_less"
        app:pinLineStroke="1dp"
        app:pinLineStrokeSelected="1dp"
        app:pinTextBottomPadding="@dimen/margin_from_wall_8dp" />

    <requestFocus />
</RelativeLayout>