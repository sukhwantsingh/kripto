<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text_people_bar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/gray_little_dark"
        android:gravity="center|left"
        android:paddingLeft="@dimen/margin_from_wall_4dp"
        android:paddingStart="@dimen/margin_from_wall_4dp"
        android:text="People"
        android:textColor="@color/color_black"
        android:textSize="@dimen/text_size_17sp"
        android:textStyle="bold"
        android:visibility="visible" />

    <RelativeLayout
        android:id="@+id/rel_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:visibility="visible">

        <RelativeLayout
            android:id="@+id/rel_users_lay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="@dimen/margin_from_wall_8dp"
            android:layout_marginLeft="@dimen/margin_from_wall_8dp"
            android:layout_marginRight="@dimen/margin_from_wall_8dp"
            android:layout_toLeftOf="@+id/btn_follow"
            android:layout_toStartOf="@+id/btn_follow">

            <LinearLayout
                android:id="@+id/linear_users_lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_from_wall_4dp"
                android:layout_marginTop="@dimen/margin_from_wall_4dp"
                android:background="@color/color_white"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:orientation="horizontal">

                <braille.kofefe.app.modules_.common_util_.SquareRoundCornerImageView
                    android:id="@+id/circleImageView2"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_gravity="center|top"
                    android:scaleType="fitXY"
                    android:src="@drawable/user_75" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="@dimen/margin_from_wall_2dp"
                    android:layout_marginStart="@dimen/margin_from_wall_2dp"

                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_from_wall_8dp"
                        android:layout_marginStart="@dimen/margin_from_wall_8dp"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="@color/partial_black"
                        android:textSize="@dimen/text_size_13sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_from_wall_8dp"
                        android:layout_marginStart="@dimen/margin_from_wall_8dp"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="@color/gray_d"
                        android:textSize="@dimen/text_size_13sp" />

                    <TextView
                        android:id="@+id/txt_joined"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_from_wall_8dp"
                        android:layout_marginStart="@dimen/margin_from_wall_8dp"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="@color/partial_black"
                        android:textSize="@dimen/text_size_13sp" />

                    <TextView
                        android:id="@+id/txt_userProfesion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_from_wall_8dp"
                        android:layout_marginStart="@dimen/margin_from_wall_8dp"
                        android:drawableLeft="@mipmap/loc_15"
                        android:drawablePadding="2sp"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="@color/partial_black"
                        android:textSize="@dimen/text_size_13sp" />


                    <TextView
                        android:id="@+id/txt_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_from_wall_8dp"
                        android:layout_marginStart="@dimen/margin_from_wall_8dp"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="@color/partial_black"
                        android:textSize="@dimen/text_size_13sp" />

                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/btn_follow"
            android:layout_width="100dp"
            android:layout_height="32dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/margin_from_wall_8dp"
            android:background="@drawable/rel_btn"
            android:elevation="@dimen/elevation_button"
            android:gravity="center"
            android:paddingLeft="@dimen/padding_5sp"
            android:paddingRight="@dimen/padding_5sp"
            android:text=""
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size_15sp" />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginEnd="@dimen/margin_from_wall_8dp"
        android:layout_marginLeft="@dimen/margin_from_wall_8dp"
        android:background="@color/gray_little_dark" />

    <TextView
        android:id="@+id/text_post_bar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/gray_little_dark"
        android:gravity="center|left"
        android:paddingLeft="@dimen/margin_from_wall_4dp"
        android:paddingStart="@dimen/margin_from_wall_4dp"
        android:text="Post"
        android:textColor="@color/color_black"
        android:textSize="@dimen/text_size_17sp"
        android:textStyle="bold"
        android:visibility="visible" />


    <LinearLayout
        android:id="@+id/linear_post_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:orientation="vertical"
        android:visibility="visible">

        <RelativeLayout
            android:id="@+id/rel_post"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:orientation="vertical"
            android:paddingBottom="@dimen/margin_from_wall_4dp">

            <braille.kofefe.app.modules_.common_util_.SquareRoundCornerImageView
                android:id="@+id/circleImageView"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginTop="5dp"
                android:scaleType="fitXY"
                android:src="@mipmap/user_50" />

            <TextView
                android:id="@+id/txt_namee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/circleImageView"
                android:layout_marginStart="8dp"
                android:layout_marginTop="1dp"
                android:layout_toEndOf="@+id/circleImageView"
                android:clickable="true"
                android:singleLine="true"
                android:text="ggdsgfdgfdg"
                android:textColor="@color/partial_black"
                android:textSize="@dimen/text_size_13sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/circleImageView"
                android:layout_below="@+id/txt_namee"
                android:layout_marginEnd="@dimen/margin_from_wall_8dp"
                android:layout_marginRight="@dimen/margin_from_wall_8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="2dp"
                android:singleLine="true"
                android:text="fggfgfgfg"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_size_13sp" />


            <TextView
                android:id="@+id/textView_location_p"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_time"
                android:layout_marginEnd="@dimen/margin_from_wall_8dp"
                android:layout_marginRight="@dimen/margin_from_wall_8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="2dp"
                android:layout_toEndOf="@+id/circleImageView"
                android:textColor="@color/partial_black"
                android:textSize="@dimen/text_size_13sp" />


        </RelativeLayout>

        <TextView
            android:id="@+id/txt_post_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_from_wall_8dp"
            android:gravity="left"
            android:lineSpacingExtra="@dimen/margin_from_wall_2dp"
            android:text=""
            android:textColor="@color/partial_black"
            android:textSize="@dimen/text_size_17sp" />


        <RelativeLayout
            android:id="@+id/relative"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:layout_marginTop="@dimen/margin_from_wall_8dp"
            android:visibility="visible">

            <FrameLayout
                android:id="@+id/frame_scrambled"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/stroke_blue_gradiant"
                android:visibility="gone">

                <pl.droidsonroids.gif.GifImageView
                    android:id="@+id/imageView_scrambled"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/a"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/txt_scrambled"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="@dimen/padding_5sp"
                    android:text="something went wrong"
                    android:textColor="@color/partial_black"
                    android:textSize="@dimen/text_size_17sp"
                    android:visibility="gone" />


            </FrameLayout>

            <FrameLayout
                android:id="@+id/frame_post"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/imageView_video_back"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/a"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/imageView_video_play"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:elevation="@dimen/elevation_button"
                    android:src="@drawable/ic_play_music"
                    android:visibility="gone" />

            </FrameLayout>

            <FrameLayout
                android:id="@+id/progress_unscrambled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:visibility="visible">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="240dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/blue_cover_"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/img_lockpost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/lock_press" />
                <!--  android:digits="1234567890" -->
                <com.github.lzyzsd.circleprogress.DonutProgress
                    android:id="@+id/donut_progress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:donut_circle_starting_degree="-90"
                    app:donut_finished_color="@color/color_white"
                    app:donut_finished_stroke_width="@dimen/margin_from_wall_4dp"
                    app:donut_max="120"
                    app:donut_show_text="false"
                    app:donut_unfinished_color="#006398"
                    app:donut_unfinished_stroke_width="@dimen/margin_from_wall_4dp" />

                <TextView
                    android:id="@+id/txt_timer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:layout_marginBottom="@dimen/margin_from_wall_24dp"
                    android:text="Unlock"
                    android:textColor="#fff"
                    android:textSize="21sp"
                    android:textStyle="bold" />

            </FrameLayout>


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1pt"
            android:layout_marginEnd="@dimen/margin_from_wall_8dp"
            android:layout_marginLeft="@dimen/margin_from_wall_8dp"
            android:layout_marginRight="@dimen/margin_from_wall_8dp"
            android:layout_marginStart="@dimen/margin_from_wall_8dp"
            android:background="@color/gray_little_dark" />


    </LinearLayout>

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_from_wall_32dp" />
</LinearLayout>