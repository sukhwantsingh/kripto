<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="43dp"
        android:gravity="center"
        android:text="Verify your phone\nnumber!"
        android:textColor="@color/color_black_less"
        android:textSize="@dimen/margin_from_wall_24dp" />

    <TextView
        android:id="@+id/textView2_wrong_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_from_wall_16dp"
        android:gravity="center"
        android:padding="@dimen/margin_from_wall_8dp"
        android:text="Waiting to automatically detect and SMS sent to\n+62 1234567890. Wrong number?"
        android:textColor="@color/color_light_gray" />


    <com.alimuzaffar.lib.pin.PinEntryEditText
        android:id="@+id/txt_pin_entry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2_wrong_text"
        android:layout_marginLeft="@dimen/margin_from_wall_24dp"
        android:layout_marginRight="@dimen/margin_from_wall_24dp"
        android:layout_marginTop="@dimen/margin_from_wall_24dp"
        android:cursorVisible="false"
        android:digits="1234567890"
        android:inputType="number"
        android:maxLength="4"
        android:textIsSelectable="false"
        android:textSize="20sp"
        app:pinBackgroundIsSquare="false"
        app:pinLineColors="@color/color_black_less"
        app:pinLineStroke="1dp"
        android:imeOptions="actionDone"
        app:pinLineStrokeSelected="1dp"
        app:pinTextBottomPadding="@dimen/margin_from_wall_8dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_pin_entry"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_from_wall_8dp"
        android:text="Enter 4-digit code"
        android:textColor="@color/kprogresshud_grey_color"
        android:textSize="@dimen/text_size_17sp" />
</RelativeLayout><!--
   app:pinSingleCharHint="#"
        app:pinAnimationType="popIn|fromBottom|none"
        app:pinBackgroundDrawable="@drawable/bg_pin"
