<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_from_wall_24dp"
        android:text="KOFEFE"
        android:textColor="@color/app_color"
        android:textSize="@dimen/margin_from_wall_32dp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textInputLayout"
        android:layout_alignLeft="@+id/textInputLayout"
        android:layout_alignRight="@+id/textInputLayout"
        android:layout_alignStart="@+id/textInputLayout"
        android:layout_below="@+id/textView"
        android:layout_marginTop="43dp"
        android:gravity="center"
        android:text="Good to see you again!"
        android:textColor="@color/color_black_less"
        android:textSize="@dimen/margin_from_wall_24dp" />


    <android.support.design.widget.TextInputLayout
        android:id="@+id/textInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="@dimen/margin_from_wall_32dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Phone Number"
            android:inputType="phone" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/textInputLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textInputLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="@dimen/margin_from_wall_24dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:inputType="textPassword" />

    </android.support.design.widget.TextInputLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textInputLayout2"
        android:layout_alignRight="@+id/textInputLayout2"
        android:layout_below="@+id/textInputLayout2"
        android:gravity="right"
        android:padding="@dimen/margin_from_wall_8dp"
        android:text="Forgot Password?"
        android:textColor="@color/app_color" />

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/margin_from_wall_24dp"
        android:layout_marginLeft="@dimen/margin_from_wall_24dp"
        android:layout_marginRight="@dimen/margin_from_wall_24dp"
        android:background="@drawable/btn_bg_starting"
        android:elevation="@dimen/elevation_button"
        android:onClick="goForLogin"
        android:text="Login!"
        android:textColor="@color/color_white" />


</RelativeLayout>
