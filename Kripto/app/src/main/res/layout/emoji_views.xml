<?xml version="1.0" encoding="utf-8"?>
<com.daasuu.bl.BubbleLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/margin_from_wall_16dp"
    android:layout_marginStart="@dimen/margin_from_wall_16dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:padding="@dimen/margin_from_wall_8dp"
    app:bl_arrowDirection="bottom"
    app:bl_arrowHeight="8dp"
    app:bl_arrowPosition="@dimen/margin_from_wall_32dp"
    app:bl_arrowWidth="@dimen/margin_from_wall_8dp"
    app:bl_bubbleColor="@color/gray_d"
    app:bl_cornersRadius="25dp">

    <LinearLayout
        android:id="@+id/llReactContainerBottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/rv2_like"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@mipmap/like_noti" />

        <ImageView
            android:id="@+id/rv1_laugh"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="@dimen/margin_from_wall_4dp"
            android:layout_marginStart="@dimen/margin_from_wall_4dp"

            android:adjustViewBounds="true"
            android:src="@mipmap/laugh_24" />

        <ImageView
            android:id="@+id/rv3_sad"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="@dimen/margin_from_wall_4dp"
            android:layout_marginStart="@dimen/margin_from_wall_4dp"
            android:src="@mipmap/sad_noti" />

        <ImageView
            android:id="@+id/rv4_love"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="@dimen/margin_from_wall_4dp"
            android:layout_marginStart="@dimen/margin_from_wall_4dp"
            android:src="@mipmap/heart_noti" />

        <ImageView
            android:id="@+id/rv5_angry"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="@dimen/margin_from_wall_4dp"
            android:layout_marginStart="@dimen/margin_from_wall_4dp"
            android:src="@mipmap/sleep_noti" />


    </LinearLayout>

</com.daasuu.bl.BubbleLayout>
